{
    "development": {
        "options": {
            "paths": ["<%= dirs.public %>/stylesheets"],
            "sourceMap": true,
            "cleancss": true
        },
        "files": [
            {
                "expand": true,
                "cwd": "public/stylesheets/",
                "src": ["**/*.less"],
                "dest": "public/stylesheets/",
                "ext": ".css"
            }
        ]
    }
}